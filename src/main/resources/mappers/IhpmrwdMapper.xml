<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ihpmrwdMapper">
	<insert id="insertIhpmrwd" parameterType="java.util.Map">
		INSERT INTO `INNER_HARBOR_PSNSHIP_MAIN_RUTE_WETHER_DATA`
		(`RUTE_NM`,
		`WR_INFO_NO`,
		`WR_OBSV_TM`,
		`WR_OBSV_LAT`,
		`WR_OBSV_LONG`,
		`WIND_DIR`,
		`WIND_SPD`,
		`WVHGT`,
		`RST_WIND_SPD`,
		`RST_WVHGT`)
		VALUES
		<foreach item="item" index="index" collection="list" separator=" , ">
		(
		#{item.RUTE_NM},
		#{item.WR_INFO_NO},
		#{item.WR_OBSV_TM},
		#{item.WR_OBSV_LAT},
		#{item.WR_OBSV_LONG},
		#{item.WIND_DIR},
		#{item.WIND_SPD},
		#{item.WVHGT},
		#{item.RST_WIND_SPD},
		#{item.RST_WVHGT}
		)
		</foreach>
	</insert>
	
	<select id="selectIhpmrwdCnt" resultType="Integer">
	<![CDATA[
	  	SELECT
			COUNT(IDX)
      	FROM
        	`INNER_HARBOR_PSNSHIP_MAIN_RUTE_WETHER_DATA`
	]]>
  	</select>

	<select id="selectIhpmrwdListPage" resultType="IhpmrwdDto" parameterType="PagingDto">
	<![CDATA[
		SELECT 
			`IDX`,
		    `RUTE_NM`,
		    `WR_INFO_NO`,
		    `WR_OBSV_TM`,
		    `WR_OBSV_LAT`,
		    `WR_OBSV_LONG`,
		    `WIND_DIR`,
		    `WIND_SPD`,
		    `WVHGT`,
		    `RST_WIND_SPD`,
		    `RST_WVHGT`
		FROM
			`INNER_HARBOR_PSNSHIP_MAIN_RUTE_WETHER_DATA`
		LIMIT #{limitStartNo}, #{pageSize}
	]]> 
    </select>
</mapper>