<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ihpmncdMapper">
	<insert id="insertIhpmncd" parameterType="java.util.Map">
	  	INSERT INTO `INNER_HARBOR_PSNSHIP_MNBY_NVG_CNRL_DATA`
		(`YYYY`,
		`MM`,
		`PASNGR_SAFE_CNTER`,
		`RUTE_NO`,
		`RUTE_NM`,
		`CTRL_TYPHOON`,
		`CTRL_WDWV_WARN`,
		`CTRL_WDWV_ADV`,
		`CRTL_DTRT_WR`,
		`CTRL_RSTC_VISIBIL`,
		`CTRL_ETC`,
		`NNAVI_ISPT`,
		`NNAVI_IMPRMN`,
		`NNAVI_ETC`)
		VALUES
		<foreach item="item" index="index" collection="list" separator=" , ">
		(
		#{item.YYYY},
		#{item.MM},
		#{item.PASNGR_SAFE_CNTER},
		#{item.RUTE_NO},
		#{item.RUTE_NM},
		#{item.CTRL_TYPHOON},
		#{item.CTRL_WDWV_WARN},
		#{item.CTRL_WDWV_ADV},
		#{item.CRTL_DTRT_WR},
		#{item.CTRL_RSTC_VISIBIL},
		#{item.CTRL_ETC},
		#{item.NNAVI_ISPT},
		#{item.NNAVI_IMPRMN},
		#{item.NNAVI_ETC}
		)
		</foreach>
	</insert>
	
	<select id="selectIhpmncdCnt" resultType="Integer">
	<![CDATA[
	  	SELECT
			COUNT(IDX)
      	FROM
        	`INNER_HARBOR_PSNSHIP_MNBY_NVG_CNRL_DATA`
	]]>
  	</select>

	<select id="selectIhpmncdListPage" resultType="IhpmncdDto" parameterType="PagingDto">
	<![CDATA[
		SELECT
			`IDX`,
		    `YYYY`,
		    `MM`,
		    `PASNGR_SAFE_CNTER`,
		    `RUTE_NO`,
		    `RUTE_NM`,
		    `CTRL_TYPHOON`,
		    `CTRL_WDWV_WARN`,
		    `CTRL_WDWV_ADV`,
		    `CRTL_DTRT_WR`,
		    `CTRL_RSTC_VISIBIL`,
		    `CTRL_ETC`,
		    `NNAVI_ISPT`,
		    `NNAVI_IMPRMN`,
		    `NNAVI_ETC`
		FROM
			`INNER_HARBOR_PSNSHIP_MNBY_NVG_CNRL_DATA`
		LIMIT #{limitStartNo}, #{pageSize}
	]]> 
    </select>
    
    <delete id="deleteIhpmncd">
    <![CDATA[
		DELETE FROM INNER_HARBOR_PSNSHIP_MNBY_NVG_CNRL_DATA WHERE IDX > 0
	]]>
	</delete>
</mapper>